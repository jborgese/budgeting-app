{
  "name": "budgeting-app",
  "version": "1.0.0",
  "description": "A budgeting application built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "dist": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "express": "^4.17.1"
  },
  "build": {
    "appId": "com.example.exceltoelectron",
    "productName": "Budgeting App",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "taxBrackets.js",
      "data.json",
      "node_modules/**/*",
      "JBorgese Financial Statement v1.3.1.1.xlsx",
      "assets/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "sign": false,
      "target": [
        "nsis",
        "zip"
      ]
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "afterSign": "scripts/afterSignHook.js"
  }
}
